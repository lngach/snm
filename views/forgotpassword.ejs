<!DOCTYPE html>
<html lang="en">
  <% include shared/link %>
  <body data-spy="scroll" data-target=".fixed-top">
    <!-- Preloader -->
    <div class="spinner-wrapper">
      <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </div>
    </div>
    <!-- end of preloader -->

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
      <div class="container">
        <!-- Text Logo - Use this if you don't have a graphic logo -->
        <!-- <a class="navbar-brand logo-text page-scroll" href="index.html">Tivo</a> -->

        <!-- Image Logo -->
        <a class="navbar-brand logo-image" href="/"
          ><img src="/images/logo.svg" alt="alternative"
        /></a>
      </div>
      <!-- end of container -->
    </nav>
    <!-- end of navbar -->
    <!-- end of navigation -->

    <!-- Header -->
    <header id="header" class="ex-2-header">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <h1>Forgot Password</h1>
            <p>
              Please enter your email!
            </p>
            <!-- Sign Up Form -->
            <h1 style="color: black; font-size: small;" id="message"></h1>
            <div class="form-container">
              <form id="forgotForm" data-toggle="validator" data-focus="false">
                <div class="form-group">
                  <input
                    type="email"
                    class="form-control-input"
                    id="femail"
                    required
                  />
                  <label class="label-control" for="lemail">Email</label>
                  <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                  <button
                    id="btnn"
                    type="submit"
                    class="form-control-submit-button"
                  >
                    SEND
                  </button>
                  <p style="color: black;">
                    You have a accout?
                    <a style="color: black;" class="white" href="/auth"
                      >Sign in</a
                    >
                  </p>
                </div>
                <div class="form-message">
                  <div id="lmsgSubmit" class="h3 text-center hidden"></div>
                </div>
              </form>
            </div>
            <!-- end of form container -->
            <!-- end of sign up form -->
          </div>
          <!-- end of col -->
        </div>
        <!-- end of row -->
      </div>
      <!-- end of container -->
    </header>
    <!-- end of ex-header -->
    <!-- end of header -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <% include shared/script %>
    <script>
      $('#femail').on('keyup', () => {
        var email = $('#femail').val()
        if (!validateEmail(email)) {
          $('#message').text('Email not valid!')
        } else {
          $('#message').text('')
        }
      })
      $('#forgotForm').on('submit', (e) => {
        e.preventDefault()
        var email = $('#femail').val()
        if (!validateEmail(email)) return
        $.ajax({
          url: '/auth/forgotpassword',
          method: 'POST',
          data: { email },
        }).done((res) => {
          if (!res.success) {
            return $('#message').text(res.message)
          } else {
            localStorage.setItem('user', JSON.stringify(res.user))
            window.location.href = '/'
          }
        })
      })
      $(() => {
        if (localStorage.getItem('user')) {
          window.location.href = '/'
        }
      })
      function validateEmail(email) {
        const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
        return re.test(String(email).toLowerCase())
      }
    </script>
  </body>
</html>
